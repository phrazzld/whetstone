rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /books/{bookId} {
      allow read, write: if (resource.data.userId == request.auth.uid)
      match /notes/{noteId} {
        allow read, write: if get(/databases/$(database)/documents/books/$(bookId)).data.userId == request.auth.uid;
      }
    }
    match /notes/{noteId} {
      allow read, write: if false
    }
  }
}
